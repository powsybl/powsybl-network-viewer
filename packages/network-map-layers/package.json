{
    "name": "@powsybl/network-map-layers",
    "version": "2.0.0",
    "description": "Deck.gl layers to integrate PowSyBl network viewers in a JavaScript project.",
    "author": "PowSyBl team",
    "homepage": "https://www.powsybl.org/",
    "license": "MPL-2.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/powsybl/powsybl-network-viewer.git"
    },
    "engines": {
        "node": ">=22",
        "npm": "^10.9.2"
    },
    "type": "module",
    "main": "./dist/powsybl-network-map-layers.cjs",
    "module": "./dist/powsybl-network-map-layers.js",
    "types": "./dist/index.d.ts",
    "files": [
